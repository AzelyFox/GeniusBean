<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#00000000"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:background="@drawable/chat_list"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/frag_chat_list_scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/frag_chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textStyle="normal"
                android:textSize="13dp"
                android:lineSpacingMultiplier="1.4"
                android:textColor="#FFFFFF"/>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="3dp"
        android:paddingTop="2dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/chat_box"
            android:layout_marginRight="2dp">
            <EditText
                android:id="@+id/frag_chat_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="14dp"
                android:paddingBottom="2dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="@string/chat_chatbox_hint"
                android:singleLine="true"
                android:imeActionId="@+id/chat_chatbox_send"
                android:imeActionLabel="@string/chat_chatbox_btn"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:textColorHint="#EEEEEE"/>
        </LinearLayout>

        <Button
            android:id="@+id/frag_chat_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:textSize="13dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="@string/chat_chatbox_btn"/>
    </LinearLayout>
</LinearLayout>