<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/scr_login_parent_inner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/login_background"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <kr.devs.geniusbean.utils.CustomHorizontalScrollView
            android:id="@+id/scr_login_beans_i"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/login_beans_i"
                android:scaleType="fitXY"/>
        </kr.devs.geniusbean.utils.CustomHorizontalScrollView>
        <kr.devs.geniusbean.utils.CustomHorizontalScrollView
            android:id="@+id/scr_login_beans_ii"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:visibility="gone">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/login_beans_ii"
                android:scaleType="fitXY"/>
        </kr.devs.geniusbean.utils.CustomHorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- UTILS LAYOUT -->
            <TextView
                android:id="@+id/scr_login_tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/scr_login_gamelogo"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/login_logo"/>
                <ImageView
                    android:id="@+id/scr_login_img_dice"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_dice"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/scr_login_google_sign_in_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:id="@+id/scr_login_progressbar"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/scr_login_google_sign_in_button" />
                    <TextView
                        android:id="@+id/scr_login_tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/scr_login_progressbar"
                        android:text="LOADING"
                        android:textSize="12dp"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/scr_login_parent_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/login_background_blur"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#60000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login_download_title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:singleLine="false"
                android:phoneNumber="false"
                android:password="false"
                android:textIsSelectable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:text="@string/login_download_title_sub"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#AB000000">
            <TextView
                android:id="@+id/scr_login_download_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/scr_login_download_progressbar"
                android:text="0/100"
                android:textSize="13dp"
                android:textColor="#FFFFFF"/>
            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/scr_login_download_progressbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/scr_login_download_text_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/scr_login_download_progressbar"
                android:text="loading"
                android:textColor="#DEDEDE"
                android:textSize="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#60000000">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/scr_main_profile_bean"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:src="@drawable/jumping_bean"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>