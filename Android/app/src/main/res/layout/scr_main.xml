<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/main_background_top">
        <!-- TOP LAYOUT FOR CHATTING -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- REAL TOP AREA -->
            <ImageView
                android:id="@+id/scr_main_top_type"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_news_type_notice"/>
            <TextView
                android:id="@+id/scr_main_top_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_notice"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scr_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@drawable/main_background">
        <!-- MAIN LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#bb000000"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <ImageView
                            android:id="@+id/scr_main_bar_grade_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/grade_red"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:paddingTop="3dp"
                        android:paddingBottom="2dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/main_bar_rating"
                            android:textSize="11dp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:id="@+id/scr_main_bar_grade_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:paddingTop="3dp"
                    android:paddingBottom="2dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingBottom="2dp"
                        android:layout_weight="1">
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/scr_main_bar_guild"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5">
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/scr_main_bar_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:src="@drawable/minibean"/>
                        <TextView
                            android:id="@+id/scr_main_bar_money"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5dp"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:src="@drawable/minibean_gold"/>
                        <TextView
                            android:id="@+id/scr_main_bar_cash"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5dp"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">
                <!-- PROFILE LAYOUT -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="4dp"
                            android:gravity="right"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_i"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_me"
                                android:layout_gravity="right" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="4dp"
                            android:gravity="right"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_ii"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_friend"
                                android:layout_gravity="right" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="5dp"
                            android:gravity="right"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_iii"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_guild"
                                android:layout_gravity="right" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/scr_main_profile_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">
                    <ImageView
                        android:id="@+id/scr_main_profile_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_box"
                        android:layout_centerVertical="true"/>
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/scr_main_profile_bean"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/channel_bean"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/scr_main_profile_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textSize="14dp"
                        android:textColor="#0184FF"
                        android:textStyle="bold"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>
                    <TextView
                        android:id="@+id/scr_main_profile_exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:textSize="12dp"
                        android:textColor="#0184FF"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="4dp"
                            android:gravity="left"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_notice"
                                android:layout_gravity="left" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="4dp"
                            android:gravity="left"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_v"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_shop"
                                android:layout_gravity="left" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:gravity="left"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/scr_main_profile_btn_vi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_setting"
                                android:layout_gravity="left" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <!-- BOX LAYOUT -->
            <RelativeLayout
                android:id="@+id/scr_main_channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <!-- REAL BOX LAYOUT FOR CHANNEL-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="35dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/main_background_box">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <!-- REAL CHANNEL LIST -->
                            <LinearLayout
                                android:id="@+id/scr_main_channel_list_i"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/channel_list_i">

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/scr_main_channel_list_ii"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/channel_list_ii">

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/scr_main_channel_list_iii"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/channel_list_iii">

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/scr_main_channel_list_iv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/channel_list_iv">

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/scr_main_channel_list_v"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/channel_list_v">

                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_scrollbar"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_channel" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/scr_main_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <!-- REAL BOX LAYOUT FOR ROOM-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="35dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/main_background_box">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#97AF86">
                            <LinearLayout
                                android:id="@+id/scr_main_room_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#97AF86">
                                <!-- REAL ROOM LIST -->
                                <ListView
                                    android:id="@+id/scr_main_room_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/scr_main_room_nothing"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#97AF86">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/scr_main_room_nothing_image"
                                        android:layout_width="40dp"
                                        android:layout_height="43dp"
                                        android:src="@drawable/sweat_bean"
                                        android:layout_centerInParent="true"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_below="@+id/scr_main_room_nothing_image"
                                        android:text="@string/main_room_list_nothing"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/scr_main_room_scrollbar"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_scrollbar"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/scr_main_image_channel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/main_channel_i" />
                <ImageView
                    android:id="@+id/scr_main_image_question"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/scr_main_image_channel"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_room_question" />
                <ImageView
                    android:id="@+id/scr_main_image_create"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/scr_main_image_question"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_room_plus" />
                <ImageView
                    android:id="@+id/scr_main_image_chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/scr_main_image_channel"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_room_chat" />
                <ImageView
                    android:id="@+id/scr_main_image_ranking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/scr_main_image_chat"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_room_ranking" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/scr_main_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/scr_main_register_box"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <kr.devs.geniusbean.utils.CheckBox
                            android:id="@+id/scr_main_register_checkbox_i"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/scr_main_register_checkbox_i_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <kr.devs.geniusbean.utils.CheckBox
                            android:id="@+id/scr_main_register_checkbox_ii"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/scr_main_register_checkbox_ii_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/scr_main_register_text_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/scr_main_register_box"/>
                <kr.devs.geniusbean.utils.FloatingEditText
                    android:id="@+id/scr_main_register_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/main_register_enter"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:layout_below="@+id/scr_main_register_text_top"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <kr.devs.geniusbean.utils.PaperButton
                    android:id="@+id/scr_main_register_button"
                    widget:paper_text="@string/main_register_button"
                    android:layout_width="160dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    widget:paper_text_color="#111111"
                    android:layout_below="@id/scr_main_register_edittext"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scr_main_feature"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@drawable/main_background_feature">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/main_background_feature_top">
                <!-- FEATURE TOP AREA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/scr_main_feature_icon"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_room_plus"/>
                    <TextView
                        android:id="@+id/scr_main_feature_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:textColor="#ffe63f"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="4dp">
                    <ImageView
                        android:id="@+id/scr_main_feature_exit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/icon_exit"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:background="@drawable/main_background_feature_box">
                <!-- FEATURE TOP AREA -->
                <LinearLayout
                    android:id="@+id/scr_main_feature_box_create"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:background="#bb000000"
                    android:gravity="center_horizontal"
                    android:padding="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <kr.devs.geniusbean.utils.FloatingEditText
                            android:id="@+id/scr_main_feature_box_create_name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/main_feature_box_create_name"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <kr.devs.geniusbean.utils.CheckBox
                                android:id="@+id/scr_main_feature_box_create_pw_use"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/main_feature_box_create_pw_use"
                                android:textColor="#FFFFFF"
                                android:textSize="12dp"/>
                        </LinearLayout>

                        <kr.devs.geniusbean.utils.FloatingEditText
                            android:id="@+id/scr_main_feature_box_create_pw"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/main_feature_box_create_pw"
                            android:inputType="number"
                            android:singleLine="true"
                            android:maxLength="8"
                            android:imeOptions="actionDone"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <kr.devs.geniusbean.utils.CheckBox
                                android:id="@+id/scr_main_feature_box_create_bat_use"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/main_feature_box_create_bat_use"
                                android:textColor="#FFFFFF"
                                android:textSize="12dp"/>
                        </LinearLayout>

                        <kr.devs.geniusbean.utils.FloatingEditText
                            android:id="@+id/scr_main_feature_box_create_bat"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/main_feature_box_create_bat"
                            android:inputType="number"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:maxLength="5"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <kr.devs.geniusbean.utils.PaperButton
                            android:id="@+id/scr_main_feature_box_create_button"
                            widget:paper_text="@string/main_feature_box_create"
                            android:layout_width="160dp"
                            android:layout_height="54dp"
                            widget:paper_text_color="#111111"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/scr_main_feature_box_question"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:background="#bb000000">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/scr_main_feature_box_chat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:background="#bb000000">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/scr_main_feature_box_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:background="#bb000000">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>